{
  "name": "stormtide-core",
  "version": "0.0.0-r2",
  "description": "Data and rules engine for Stormtide",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src test",
    "test": "cross-env NODE_ENV=test nyc mocha \"src/**/*.ts\" --recursive",
    "coverage": "cross-env NODE_ENV=test nyc --reporter lcov mocha \"src/**/*.ts\" --recursive",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "rm -rf lib; tsc",
    "todo": "leasot {src,test}/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StormtideGame/stormtide-core.git"
  },
  "author": "Lucien Greathouse <me@lpghatguy.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StormtideGame/stormtide-core/issues"
  },
  "homepage": "https://github.com/StormtideGame/stormtide-core#readme",
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.20",
    "chai": "^4.1.1",
    "coveralls": "^2.11.15",
    "cross-env": "^5.0.5",
    "leasot": "^4.10.0",
    "mocha": "^3.1.2",
    "nyc": "^11.1.0",
    "source-map-support": "^0.4.6",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ]
  },
  "dependencies": {
    "uuid": "^3.0.0"
  }
}
