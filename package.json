{
  "name": "stormtide-core",
  "version": "0.0.0",
  "description": "Data and rules engine for Stormtide",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "test": "npm run -s lint && flow && cross-env NODE_ENV=test nyc mocha",
    "coverage": "cross-env NODE_ENV=test nyc --reporter lcov mocha",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "prepublish": "rm -rf lib; gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/StormtideGame/stormtide-core.git"
  },
  "author": "Lucien Greathouse <me@lpghatguy.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/StormtideGame/stormtide-core/issues"
  },
  "homepage": "https://github.com/StormtideGame/stormtide-core#readme",
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-module-resolver": "^2.3.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.19.0",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.3",
    "eslint": "^3.10.2",
    "eslint-plugin-flowtype": "^2.25.0",
    "fast-async": "^6.1.2",
    "flow-bin": "^0.34.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-plumber": "^1.1.0",
    "gulp-sourcemaps": "^2.2.0",
    "mocha": "^3.1.2",
    "nyc": "^9.0.1",
    "source-map-support": "^0.4.6"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "source-map-support/register",
      "babel-core/register"
    ]
  }
}
